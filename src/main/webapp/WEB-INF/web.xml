<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <display-name>dreampie Web Application</display-name>
    <!--权限过滤器 start-->
    <listener>
        <listener-class>org.apache.shiro.web.env.EnvironmentLoaderListener</listener-class>
    </listener>

    <listener>
        <listener-class>org.atmosphere.cpr.SessionSupport</listener-class>
    </listener>

    <!--本地过滤器 start-->
    <filter>
        <filter-name>CommonFilter</filter-name>
        <filter-class>cn.dreampie.common.filter.CommonFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CommonFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--本地过滤器 end-->

    <!--普通用户-->
    <filter>
        <filter-name>shiroFilter</filter-name>
        <filter-class>org.apache.shiro.web.servlet.ShiroFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>shiroFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <!--socket.io-->
    <servlet>
        <description>AtmosphereServlet</description>
        <servlet-name>AtmosphereServlet</servlet-name>
        <servlet-class>org.atmosphere.cpr.AtmosphereServlet</servlet-class>
        <init-param>
            <param-name>socketio-transport</param-name>
            <param-value>websocket,xhr-polling,jsonp-polling</param-value>
        </init-param>
        <init-param>
            <param-name>socketio-timeout</param-name>
            <param-value>25000</param-value>
        </init-param>
        <init-param>
            <param-name>socketio-heartbeat</param-name>
            <param-value>15000</param-value>
        </init-param>
        <init-param>
            <param-name>socketio-suspendTime</param-name>
            <param-value>30000</param-value>
        </init-param>
        <init-param>
            <param-name>org.atmosphere.cpr.sessionSupport</param-name>
            <param-value>true</param-value>
        </init-param>
        <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>AtmosphereServlet</servlet-name>
        <url-pattern>/im/*</url-pattern>
    </servlet-mapping>
    <!--权限过滤器 end-->
    <servlet>
        <servlet-name>DruidStatView</servlet-name>
        <servlet-class>com.alibaba.druid.support.http.StatViewServlet</servlet-class>
        <!--<init-param>-->
        <!--<param-name>allow</param-name>-->
        <!--<param-value>128.242.127.1/24,128.242.128.1</param-value>-->
        <!--</init-param>-->
        <!--<init-param>-->
        <!--<param-name>deny</param-name>-->
        <!--<param-value>128.242.127.4</param-value>-->
        <!--</init-param>-->
    </servlet>
    <servlet-mapping>
        <servlet-name>DruidStatView</servlet-name>
        <url-pattern>/druid/*</url-pattern>
    </servlet-mapping>
    <!--jfinal start-->
    <filter>
        <filter-name>jfinal</filter-name>
        <filter-class>com.jfinal.core.JFinalFilter</filter-class>
        <init-param>
            <param-name>configClass</param-name>
            <param-value>cn.dreampie.common.config.AppConfig</param-value>
        </init-param>
        <init-param>
            <param-name>excludeURL</param-name>
            <param-value>/Login</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>jfinal</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--jfinal end-->

    <!--session start-->
    <session-config>
        <session-timeout>20</session-timeout>
    </session-config>
    <!--session end-->
</web-app>
